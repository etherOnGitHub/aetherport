{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["API_BASE_URL", "NEXT_PUBLIC_API_URL"],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^dev"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**", "build/**"]
        }
    }
}
